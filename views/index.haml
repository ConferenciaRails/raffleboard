!!! Strict
%html
  
  %head
    %title Raffleboard
    %link{ :href => 'stylesheets/reset.css', :type => 'text/css', :rel => 'stylesheet' }
    %link{ :href => 'stylesheets/application.css', :type => 'text/css', :rel => 'stylesheet' }
    %script{ :src => 'javascripts/jquery.js', :language => 'javascript', :type => 'text/javascript' }
    %script{ :src => 'javascripts/solari.js', :language => 'javascript', :type => 'text/javascript' }
    %script{ :src => 'javascripts/application.js', :language => 'javascript', :type => 'text/javascript' }
  
  %body

    #winners
      %h2 
        Winners
        %button#reset_list reset list

      %ul

    #drawing
      %ul

    #control_panel

      #drawing_buttons
        %button#pick_1 Pick 1
        %button#pick_5 Pick 5

      %form{ :id => 'entries_form' }
        %label{ :for => :new_entries } Add entries
        %input{ :type => :text, :id => :new_entries, :value => '1, 95, 100-150' }
        %input{ :type => :submit, :value => 'Add' }

      #entries
        %ul
